@inherits BlazorKitComponentBase

<DynamicElement TagName="div" class="@classname" Attributes="@UnknownParameters">
  @ChildContent
</DynamicElement>

@functions {
  private string classname
  {
    get
    {
      var width = Width != WidthSize.None ? Width.GetValue<WidthSize>("uk-width-") : null;
      return $"uk-inline {width} {Class}";
    }
  }
  [Parameter] private WidthSize Width { get; set; }
  [Parameter] private string Class { get; set; }
  [Parameter] private RenderFragment ChildContent { get; set; }
}