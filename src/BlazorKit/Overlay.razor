@inherits BlazorKitComponentBase

<DynamicElement TagName="div" class="@classname" Attributes="@UnknownParameters">
  @ChildContent
</DynamicElement>

@functions {
  private string classname
  {
    get
    {
      var bg = BackgroundColor != DefaultPrimaryColor.None ? BackgroundColor.GetValue<DefaultPrimaryColor>("uk-overlay-") : null;
      return $"uk-overlay {bg} {Class}";
    }
  }
  [Parameter] private DefaultPrimaryColor BackgroundColor { get; set; }
  [Parameter] private string Class { get; set; }
  [Parameter] private RenderFragment ChildContent { get; set; }
}