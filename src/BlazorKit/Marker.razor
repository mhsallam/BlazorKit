@inherits BlazorKitComponentBase

<DynamicElement TagName="a" class="@classname" Attributes="@UnknownParameters" uk-marker>
  @ChildContent
</DynamicElement>

@functions {
  private string classname
  {
    get
    {
      var pos = Position != PositionType.None ? Position.GetValue<PositionType>("uk-position-") : null;
      return $"{pos} {Class}";
    }
  }
  [Parameter] private PositionType Position { get; set; }
  [Parameter] private string Class { get; set; }
  [Parameter] private RenderFragment ChildContent { get; set; }
}