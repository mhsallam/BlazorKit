@inherits BlazorKitComponentBase
@using BlazorKit.Util
@using Microsoft.AspNetCore.Components

  <InLine>
    <DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
      @ChildContent
    </DynamicElement>
  </InLine>

@functions {
  string classname
  {
    get
    {
      var widthAtts = Width.GetValues<WidthSize>(" ", "uk-width-");
      var childWidthAtts = ChildWidth.GetValues<WidthSize>(" ", "uk-child-width-");
      return $"uk-form-icon {widthAtts} {childWidthAtts} {Class}";
    }
  }

  [Parameter] private WidthSize Width { get; set; }
  [Parameter] private WidthSize ChildWidth { get; set; }
  [Parameter] private string Class { get; set; }
  [Parameter] private RenderFragment ChildContent { get; set; }
}
