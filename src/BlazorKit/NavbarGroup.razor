@inherits BlazorKitComponentBase

<DynamicElement TagName="div" Attributes="@UnknownParameters" class="@classname">
  @ChildContent
</DynamicElement>

@functions {
  string classname
  {
    get
    {
      var align = Align != Alignment.None ? $"uk-navbar-{Align.GetValue<Alignment>()}" : null;
      return $"{align} {Class}";
    }
  }
  [Parameter] private Alignment Align { get; set; } = Alignment.None;
  [Parameter] private string Class { get; set; }
  [Parameter] private RenderFragment ChildContent { get; set; }
}