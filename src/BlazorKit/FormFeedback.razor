@inherits BlazorKitComponentBase

@if (IsValid || IsInvalid)
{
  <DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
  </DynamicElement>
}

@functions {
  string classname
  {
    get
    {
      var cls = IsTooltip ? "tooltip" : "feedback";
      var isvalid = IsValid ? $"valid-{cls}" : null;
      var isinvalid = IsInvalid ? $"invalid-{cls}" : null;
      return $"{isvalid} {isinvalid} {Class}";
    }
  }
  [Parameter] private bool IsValid { get; set; }
  [Parameter] private bool IsInvalid { get; set; }
  [Parameter] private bool IsTooltip { get; set; }
  [Parameter] private string Class { get; set; }
  [Parameter] private RenderFragment ChildContent { get; set; }
}